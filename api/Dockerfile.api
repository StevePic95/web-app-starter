# .NET 9 SDK for dev/watch
FROM mcr.microsoft.com/dotnet/sdk:9.0

ENV DOTNET_NOLOGO=1 \
    DOTNET_CLI_TELEMETRY_OPTOUT=1

WORKDIR /src

# The source is bind-mounted by docker-compose; no COPY here.
EXPOSE 8080

# Default will be overridden by compose (dotnet watch run)
CMD ["bash","-lc","dotnet --info && sleep infinity"]
